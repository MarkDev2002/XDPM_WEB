@using QuanLyBanHang.Entity;
@using QuanLyBanHang.Models.User;
@model UserRegisterViewModel;
@using (Html.BeginForm())
{
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <div class="card shadow-lg border-0 rounded-lg mt-5">
                    <div class="card-header"><h3 class="text-center font-weight-light my-4">Create Account</h3></div>
                    <div class="card-body">
                        <form method="post" asp-action="Register">

                            <div class="form-floating mb-3">

                                <input asp-for="@Model.UserName" class="form-control" id="inputUserName" type="text" placeholder="Enter your user name" />
                                <label for="inputUsername">Username</label>
                                <span asp-validation-for="@Model.UserName" class="text-danger"></span>
                            </div>
                            <div class="row mb-3">
                                <div class="col-md-4">
                                    <div class="form-floating mb-3 mb-md-0">
                                        <input asp-for="@Model.cusFullName" class="form-control" id="inputFullName" type="text" placeholder="Enter your full name" />
                                        <label for="inputFullName">Full name</label>
                                        <span asp-validation-for="@Model.cusFullName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-floating">
                                        <input asp-for="@Model.cusPhone" class="form-control" id="inputPhone" type="text" placeholder="Enter your phone number" />
                                        <label for="inputPhone">Phone number</label>
                                        <span asp-validation-for="@Model.cusPhone" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                        <label for="inputGender">Gender</label>
                                        <select asp-for="Gender" id="inputGender" class="form-control" asp-items="Html.GetEnumSelectList<Gender>()"></select>

                                        <span asp-validation-for="Gender" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-floating mb-3">
                                <input asp-for="@Model.cusAddress" class="form-control" id="inputaddress" type="text" placeholder="Enter your address" />
                                <label for="inputaddress">Customer's address</label>
                                <span asp-validation-for="@Model.cusAddress" class="text-danger"></span>
                            </div>
                            <div class="form-floating mb-3">
                                <input asp-for="@Model.cusEmail" class="form-control" id="inputEmail" type="email" placeholder="name@example.com" />
                                <label for="inputEmail">Email address</label>
                                <span asp-validation-for="@Model.cusEmail" class="text-danger"></span>
                            </div>
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <div class="form-floating mb-3 mb-md-0">
                                        <input asp-for="@Model.passWord" class="form-control" id="inputPassword" type="password" placeholder="Create a password" />
                                        <label for="inputPassword">Password</label>
                                        <span asp-validation-for="@Model.passWord" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating mb-3 mb-md-0">
                                        <input asp-for="@Model.conFirmPassword" class="form-control" id="inputPasswordConfirm" type="password" placeholder="Confirm password" />
                                        <label for="inputPasswordConfirm">Confirm Password</label>
                                        <span asp-validation-for="@Model.conFirmPassword" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="mt-4 mb-0">
                                <button type="submit" style="border:none;background-color:white"><div class="d-grid btn btn-primary btn-block">Create Account</div></button>
                            </div>
                        </form>
                    </div>
                    <div class="card-footer text-center py-3">
                        <div class="small"><a>@Html.ActionLink("Have an account? Go to login","Login","User")</a></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}




@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}



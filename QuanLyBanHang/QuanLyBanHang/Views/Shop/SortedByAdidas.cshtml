<div class="card">
    <div class="card-body">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
                <li class="breadcrumb-item active" aria-current="page">Sorted: Adidas</li>
            </ol>
        </nav>
        <div class="row">
            <div class="col-md-12 table-responsive-md">
                <table class="table table-striped table-dark">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Price</th>
                            <th>Size</th>
                            <th>Brand</th>
                            <th>Update Date</th>
                            <th>Status</th>
                            <th>Gender</th>
                            <th>Image</th>
                            <th class="text-warning">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>
                                    <a asp-action="Detail" asp-route-id="@item.Id">
                                        @item.Id
                                    </a>
                                </td>
                                <th>@item.proName</th>
                                <th>@item.proPrice</th>
                                <th>@item.proSize</th>
                                <th>@item.Producer</th>
                                <th>@item.proUpdateDate.ToShortDateString()</th>
                                <th>@item.proStatus</th>
                                <th>@item.forGender</th>
                                <td>
                                    <img style="width:80px" src="@Url.Content(@item.ImageUrl)" />
                                </td>
                                <td>
                                    <a class="text-success" asp-action="Detail" asp-route-id="@item.Id">
                                        <i class="fa-solid fa-circle-info"></i> Detail
                                    </a>
                                    <a class="text-info" asp-action="AddToCart" asp-controller="Cart" asp-route-id="@item.Id">
                                        <i class="fas fa-plus-square"></i> Add to Cart
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
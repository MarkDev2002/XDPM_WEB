@using QuanLyBanHang.Models.Product;
@model IEnumerable<ProductIndexViewModel>;
<div class="card">
    <div class="card-body">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
                <li class="breadcrumb-item active" aria-current="page">Product List</li>
            </ol>
        </nav>
        <div class="row">
            <div class="col-md-12 table-responsive-md">
                <a class="btn btn-xs btn-outline-success float-md-right mb-3" asp-action="Create"> New Product</a>
                <table class="table table-striped table-dark">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>
                                Price<a type="button" class="btn btn-secondary" asp-action="SortedByPrice" asp-route-sortOrder="desc">
                                    <i class="fa-solid fa-arrow-down-wide-short"></i>
                                </a>
                                <a type="button" class="btn btn-secondary" asp-action="SortedByPrice" asp-route-sortOrder="inc">
                                    <i class="fa-solid fa-arrow-down-short-wide"></i>
                                </a>
                            </th>
                            <th>Size</th>
                            <th>Brand</th>
                            <th>Update Date</th>
                            <th>
                                Quantity<a type="button" class="btn btn-secondary" asp-action="SortedByQuantity" asp-route-sortOrder="desc">
                                    <i class="fa-solid fa-arrow-down-wide-short"></i>
                                </a>
                                <a type="button" class="btn btn-secondary" asp-action="SortedByQuantity" asp-route-sortOrder="inc">
                                    <i class="fa-solid fa-arrow-down-short-wide"></i>
                                </a>
                            </th>
                            <th>Status</th>
                            <th>Gender</th>
                            <th>Image</th>
                            <th class="text-warning">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>
                                    <a asp-action="Detail" asp-route-id="@item.Id">
                                        @item.Id
                                    </a>
                                </td>
                                <th>@item.proName</th>
                                <th>@item.proPrice</th>
                                <th>@item.proSize</th>
                                <th>@item.Producer</th>
                                <th>@item.proUpdateDate.ToShortDateString()</th>
                                <th>@item.Quantity</th>
                                <th>@item.proStatus</th>
                                <th>@item.forGender</th>
                                <td>
                                    <img style="width:80px" src="@Url.Content(@item.ImageUrl)" />
                                </td>
                                <td>
                                    <a class="text-primary" asp-action="Edit" asp-route-id="@item.Id">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                    <a class="text-success" asp-action="Detail" asp-route-id="@item.Id">
                                        <i class="fas fa-bars"></i> Detail
                                    </a>
                                    <a class="text-danger" asp-action="Delete" asp-route-id="@item.Id">
                                        <i class="far fa-trash-alt"></i> Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
@using QuanLyBanHang.Entity;
@using QuanLyBanHang.Models.Order;
@model OrderCreateViewModel;
@using (Html.BeginForm("CreateOrder","Cart", FormMethod.Post))
{

    <div class="card">
        <div class="card-body">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Your Cart</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Create Order</li>
                </ol>
            </nav>
        </div>

        <div class="row mb-8">
            <div class="col-md-1"></div>
            <div class="col-md-4">
                <div class="form-floating mb-3 mb-md-0">
                    <input asp-for="@Model.cusPhone" class="form-control" id="inputPhone" type="text" />
                    <label for="inputPhone">Your Phone</label>
                    <span asp-validation-for="@Model.cusPhone" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-2">
                <label for="inputPayMethod">Payment Method</label>
                <select asp-for="paymentMethod" id="inputGender" class="form-control" asp-items="Html.GetEnumSelectList<PaymentMethod>()"></select>

                <span asp-validation-for="paymentMethod" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <div class="form-floating mb-3 mb-md-0">
                    <input asp-for="@Model.orderMessage" class="form-control" id="inputMess" type="text" />
                    <label for="inputMess">Message</label>
                    <span asp-validation-for="@Model.orderMessage" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-1"></div>
        </div><br /><br /><br />
        <div class="row mb-8">
            <div class="col-md-1"></div>
            <div class="col-md-4">
                <div class="form-floating mb-3 mb-md-0">
                    <input asp-for="@Model.orderDateTime" class="form-control" id="inputDateTime" type="text" />
                    <label for="inputDate">Date Time</label>
                    <span asp-validation-for="@Model.orderDateTime" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-2">
                
            </div>
            <div class="col-md-4">
                <div class="form-floating mb-3 mb-md-0">
                    <input asp-for="@Model.cusAddress" class="form-control" id="inputAdd" type="text" />
                    <label for="inputAdd">Address</label>
                    <span asp-validation-for="@Model.cusAddress" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-1"></div>
        </div><br /><br /><br />
            <div class="d-flex align-items-center justify-content-around mt-4 mb-0" style="padding-bottom:30px">
                <button type="submit" class="btn btn-rounded btn-primary float-left"><i class="fas fa-plus-square" style="margin-right:0.7em"></i>Create</button>
                <a asp-action="Index" class="btn btn-rounded btn-success float-right"><i class="fas fa-caret-square-left" style="margin-right:0.7em"></i>Back</a>
            </div>
    </div>
}


@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

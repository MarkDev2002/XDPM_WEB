@model ProductDetailViewModel;
@using QuanLyBanHang.Models.Product;
<div class="col-md-12 grid-margin grid-margin-md-0">
    <div class="card">
        <div class="card-body">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Your cart</a></li>
                    <li class="breadcrumb-item active" aria-current="page">@Model.proName (Detail)</li>
                </ol>
            </nav><br /><br />
            <div class="wrap d-flex justify-content-md-start justify-content-sm-center flex-wrap">
                <img style="height:400px" src="@Url.Content(@Model.ImageUrl)" />

                <div class="wrap align-content-center ml-5">
                    <p class="font-weight-bold text-success" style="font-size:20px"><b>@Model.proName</b></p>
                    <hr style="background-color:black" />
                    <b>
                        <p class="font-weight-normal text-danger">ID: @Model.Id</p>
                        <p class="font-weight-normal text-danger"> Brand: @Model.Producer</p>
                        <p class="font-weight-normal">Update Date: @Model.proUpdateDate.ToString("dd/MM/yyyy")</p>
                        <hr style="background-color:black" />
                        <p class="font-weight-normal text-danger">Price: @Model.proPrice</p>
                        <p class="font-weight-normal">Discount: @Model.proDiscount</p>
                        <hr style="background-color:black" />
                        <p class="font-weight-normal text-danger">Size: @Model.proSize</p>
                        <p class="font-weight-normal text-danger"> Gender: @Model.forGender</p>
                        <hr style="background-color:black" />
                        <p class="font-weight-normal text-danger">Status: @Model.proStatus</p>
                        <p class="font-weight-normal">Quantity: @Model.Quantity</p>
                        <p class="font-weight-bold"> Description: </p>
                    </b>
                    <p class="font-weight-normal"> @Model.proDescription</p>
                    <div class="d-flex align-items-center justify-content-around mt-4 mb-0" style="padding-bottom:30px">

                        <a asp-action="Index" class="btn btn-rounded btn-success float-right"><i class="fas fa-caret-square-left" style="margin-right:0.7em"></i>Back</a>
                    </div>
                    <br /><br />
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
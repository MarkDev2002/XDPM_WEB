<div class="card">
    <div class="card-body">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
                <li class="breadcrumb-item"><a asp-action="Index">Your cart</a></li>
                <li class="breadcrumb-item active" aria-current="page">Confirm to Delete All Your Cart</li>
            </ol>
        </nav>
        <div class="wrap d-flex justify-content-md-start justify-content-sm-center flex-wrap">
            <div class="wrap align-content-center ml-5">
                <p class="font-weight-bold text-success" style="font-size:20px"><b>@Model.UserName</b></p>                
                <hr style="background-color:black" />
                <br /><br />
                <p class="font-weight-normal text-danger"><b>Confirm to Delete ALL Cart</b></p>
            </div>
            
        </div>
        <form method="post" asp-action="DeleteAllYourCart">
            <button type="submit" class="btn btn-danger">Yes</button>
            <a asp-action="Index" class="btn btn-info">No</a>
        </form>
    </div>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}